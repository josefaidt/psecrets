{
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "ci": "pnpm lint && pnpm test",
    "setup-dev": "pnpm install && pnpm build && pnpm --dir packages/psecrets/dev link --global"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "esbuild": "^0.17.12",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "turbo": "^1.8.3",
    "typescript": "^5.0.2"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:tailwindcss/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "@typescript-eslint/prefer-ts-expect-error": "warn",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "lint-staged": {
    "*.(ts|js|svelte)": [
      "prettier --list-different",
      "eslint"
    ],
    "*.(md|yaml|graphql,json)": "prettier --list-different"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ],
      "body-max-line-length": [
        2,
        "always",
        80
      ],
      "scope-case": [
        0,
        "always",
        "lower-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "test",
          "style",
          "release"
        ]
      ]
    }
  },
  "packageManager": "pnpm@7.22.0",
  "engines": {
    "node": ">=14.0.0"
  }
}
