{
  "name": "psecrets",
  "type": "module",
  "version": "0.2.1",
  "bin": "./bin/cli.js",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "types": "./build/index.d.ts"
    },
    "./cli": {
      "import": "./build/cli.js",
      "types": "./build/cli.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "ci": "pnpm lint && pnpm test",
    "setup-dev": "pnpm install && pnpm build && pnpm link --global"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.319.0",
    "@commander-js/extra-typings": "^10.0.3",
    "commander": "^10.0.1",
    "dotenv": "^16.0.3",
    "dotenv-expand": "^10.0.0",
    "enquirer": "^2.3.6",
    "inquirer": "^9.2.0",
    "kleur": "^4.1.5",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.8",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "prettier": {
    "tabWidth": 2,
    "bracketSpacing": true,
    "singleQuote": true,
    "printWidth": 80,
    "useTabs": false,
    "semi": false
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:tailwindcss/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "ignorePatterns": [
      "build/"
    ],
    "rules": {
      "@typescript-eslint/prefer-ts-expect-error": "warn",
      "@typescript-eslint/no-non-null-assertion": "off"
    }
  },
  "lint-staged": {
    "*.(ts|js|svelte)": [
      "prettier --list-different",
      "eslint"
    ],
    "*.(md|yaml|graphql,json)": "prettier --list-different"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ],
      "body-max-line-length": [
        2,
        "always",
        80
      ],
      "scope-case": [
        0,
        "always",
        "lower-case"
      ],
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "chore",
          "docs",
          "feat",
          "fix",
          "test",
          "style",
          "release"
        ]
      ]
    }
  },
  "packageManager": "pnpm@8.3.0",
  "engines": {
    "node": ">=14.0.0"
  }
}
