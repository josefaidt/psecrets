{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // "composite": true,
    "target": "esnext",
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "strict": true,
    "useDefineForClassFields": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "env.d.ts"]
}
